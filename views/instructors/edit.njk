{% extends 'layout.njk' %}
{% block head %}
  <link rel="stylesheet" href="/instructors.css">
  <title>Instructors</title>
{% endblock %}
{% block content %}
  <main>
    <div class="card">
      <section class="avatar"
        style="background: url('{{ instructor.avatar_url }}') no-repeat center center / cover;">
      </section>
      <section class="info-card">
        <form method="POST" action="/instructors?_method=PUT">     
          <h3>Editar instrutor(a)</h3>
          {% include 'instructors/fields.njk' %}
          <input type="hidden" name="id" value="{{ instructor.id }}">
        </form>
        <form id="form-delete" action="/instructors?_method=DELETE" method="post">
          <input type="hidden" name="id" value="{{ instructor.id }}">
          <button type="submit">Deletar</button>
        </form>
      </section>
    </div>
  </main>
{% endblock %}