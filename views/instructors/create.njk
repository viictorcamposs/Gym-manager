{% extends 'layout.njk' %}
{% block head %}
  <link rel="stylesheet" href="/instructors.css">
  <title>Instructors</title>
{% endblock %}
{% block content %}
  <main>
    <form id="card" method="POST" action="/instructors">
      <section class="avatar"></section>
      <section class="info-card">
        
        <h3>Novo(a) instrutor(a)</h3>
        
        <div class="item">
          <div>Foto</div>
          <div>
            <input type="url" name="foto" placeholder="https://">
          </div> 
        </div>

        <div class="item">
          <div>Instrutor(a)</div>
          <div>
            <input type="text" name="name" placeholder="Nome">
          </div> 
        </div>

        <div class="item">
          <div>Data de nascimento</div>
          <div>
            <input type="date" name="birth">
          </div> 
        </div>

        <div class="item">
          <div>Sexo</div>
          <div>
            <span><input type="radio" name="gender" value="M" checked>Masculino</span>
            <span><input type="radio" name="gender" value="F">Feminino</span>
          </div> 
        </div>

        <div class="item">
          <div>Especialização</div>
          <div>
            <input type="text" name="services"
            placeholder="Digite...">
          </div> 
        </div>
        <button type="submit">Cadastrar</button>
      </section>
    </form>
  </main>
{% endblock %}