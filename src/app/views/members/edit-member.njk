{% extends 'layout.njk' %}
{% block head %}
  <link rel="stylesheet" href="/members.css">
  <title>Members</title>
{% endblock %}
{% block content %}
  <main>
    <div class="card">
      <section class="avatar"
        style="background: url('{{ member.avatar_url }}') no-repeat center center / cover;">
      </section>
      <section class="info-card">
        <form method="POST" action="/members?_method=PUT">     
          <h3>Editar instrutor(a)</h3>
          {% include 'members/fields-member.njk' %}
          <input type="hidden" name="id" value="{{ member.id }}">
        </form>
        <form id="form-delete" action="/members?_method=DELETE" method="post">
          <input type="hidden" name="id" value="{{ member.id }}">
          <button type="submit">Deletar</button>
        </form>
      </section>
    </div>
  </main>
{% endblock %}
{% block scripts %}
    {% include 'confirmation.njk' %}
{% endblock %}